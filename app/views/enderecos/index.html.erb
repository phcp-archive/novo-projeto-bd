<div class="conteudo">
<h1>Enderecos</h1>

<table>
  <thead>
    <tr>
      <th>Bairro</th>
      <th>Cep</th>
      <th>Cidade</th>
      <th>Logradouro</th>
      <th>Complemento</th>
      <th>Estado</th>
      <th>Numero</th>
      <th>De quem?</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @enderecos.each do |endereco| %>
      <tr>
        <td><%= endereco.bairro %></td>
        <td><%= endereco.cep %></td>
        <td><%= endereco.cidade %></td>
        <td><%= endereco.logradouro %></td>
        <td><%= endereco.complemento %></td>
        <td><%= endereco.estado %></td>
        <td><%= endereco.numero %></td>
        <td><%= endereco.enderecavel.nome %>/<%= endereco.enderecavel_type%></td>
        <td><%= link_to 'Show', endereco %></td>
        <td><%= link_to 'Edit', edit_endereco_path(endereco) %></td>
        <td><%= link_to 'Destroy', endereco, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Endereco', new_endereco_path %>
</div>