<div class="conteudo">
<h1>Produções</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Quantidade</th>
      <th>Produto</th>
      <th>Itens/Quantidades<th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @producoes.each do |producao| %>
      <tr>
        <td><%= producao.data %></td>
        <td><%= producao.quantidade %></td>
        <td><%= producao.produto.nome %></td>
        <td>
          <% producao.materia_utilizadas.each do |materia_utilizada| %>
          <%= materia_utilizada.materia_prima.nome %>/<%= materia_utilizada.quantidade %>, 
          <% end %>
        </td>
        <td><%= link_to 'Detalhes', producao %></td>
        <td><%= link_to 'Editar', edit_producao_path(producao) %></td>
        <td><%= link_to 'Apagar', producao, method: :delete, data: { confirm: 'Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Produção', new_producao_path %>
</div>
