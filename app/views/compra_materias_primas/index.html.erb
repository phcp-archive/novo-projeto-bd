<div class="conteudo">
<h1>Compra de Materias Primas</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Status</th>
      <th>Pagamento</th>
      <th>Fornecedor</th>
      <th>Itens/Quantidades<th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @compra_materias_primas.each do |compra_materia_prima| %>
      <tr>
        <td><%= compra_materia_prima.data %></td>
        <td><%= compra_materia_prima.status %></td>
        <td><%= compra_materia_prima.pagamento %></td>
        <td><%= compra_materia_prima.fornecedor.nome %></td>
        <td>
          <% compra_materia_prima.materia_compradas.each do |materia_comprada| %>
          <%= materia_comprada.materia_prima.nome %>/<%= materia_comprada.quantidade %>, 
          <% end %>
        </td>
        <td><%= link_to 'Detalhes', compra_materia_prima %></td>
        <td><%= link_to 'Editar', edit_compra_materia_prima_path(compra_materia_prima) %></td>
        <td><%= link_to 'Apagar', compra_materia_prima, method: :delete, data: { confirm: 'Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

