<%= form_for [@enderecavel, @telefonavel, @pessoa] do |f| %>
  <% if @pessoa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pessoa.errors.count, "error") %> prohibited this pessoa from being saved:</h2>

      <ul>
      <% @pessoa.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :cadastro %><br>
    <%= f.text_field :cadastro %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :juridico %><br>
    <%= f.check_box :juridico %>
  </div>
  <div class="field">
    <%= f.label :endereco %><br>
    <%= f.fields_for :endereco do |builder| %>
      <%= render "endereco_fields", :f => builder %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :telefone %><br>
    <%= f.fields_for :telefone do |builder| %>
      <%= render "telefone_fields", :f => builder %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
