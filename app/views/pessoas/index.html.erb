
<h1>Clientes</h1>
<div class="data">
<!--Form de busca-->
 <%= form_tag pessoas_path, :method => 'get'  do %>
   <%= text_field_tag :search, params[:search]%>
   <%= submit_tag "Buscar", :nome => nil  %>
 <% end %>
<!--/Form de busca-->
</div>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cadastro</th>
      <th>Email</th>
      <th>Juridico</th>
      <th>Endere√ßo</th>
      <th>Telefone</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pessoas.each do |pessoa| %>
      <tr>
        <td><%= pessoa.nome %></td>
        <td><%= pessoa.cadastro %></td>
        <td><%= pessoa.email %></td>
        <td><%= pessoa.juridico %></td>
        <td><%= pessoa.endereco.logradouro %>, <%= pessoa.endereco.numero %>, <%= pessoa.endereco.cidade %>, <%= pessoa.endereco.estado %></td>
        <td>(<%= pessoa.telefone.ddd %>) <%= pessoa.telefone.numero %></td>
        <td><%= link_to 'Detalhes', pessoa %></td>
        <td><%= link_to 'Alterar', edit_pessoa_path(pessoa) %></td>
        <td><%= link_to 'Apagar', pessoa, method: :delete, data: { confirm: 'Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

