<div class="conteudo">

<h1>Compra de Produtos</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Status</th>
      <th>Pagamento</th>
      <th>Fornecedor</th>
      <th>Itens/Quantidades<th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @compra_produtos.each do |compra_produto| %>
      <tr>
        <td><%= compra_produto.data %></td>
        <td><%= compra_produto.status %></td>
        <td><%= compra_produto.pagamento %></td>
        <td><%= compra_produto.fornecedor.nome %></td>
        <td>
          <% compra_produto.produto_comprados.each do |produto_comprado| %>
          <%= produto_comprado.produto.nome %>/<%= produto_comprado.quantidade %>, 
          <% end %>
        </td>
        <td><%= link_to 'Detalhes', compra_produto %></td>
        <td><%= link_to 'Editar', edit_compra_produto_path(compra_produto) %></td>
        <td><%= link_to 'Apagar', compra_produto, method: :delete, data: { confirm: 'Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Compra de Produto', new_compra_produto_path %>
</div>